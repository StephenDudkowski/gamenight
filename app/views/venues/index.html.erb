<p id="notice"><%= notice %></p>

<a  name="gamenight"></a>
<div class="container-fluid">
<br>
    <div class="port-header"><h2>Venues!</h2></div>
    <br>
    <div class="row">

      <% @v.each do |venue| %> 
        <div class="col-sm-6 col-md-4">
          <div class="thumbnail">
            <%= image_tag('card-icon.png') %>
            <div class="caption">
              <h3><a href="#" target="_blank"><%= venue.name %></a></h3>
               <p class="lead"><%= venue.venues_type %></p>
                          <p><ul>
                              <li><%= venue.address %></li>
                              <li><%= venue.phone %></li>
                              <li><%= venue.website %></li>
                          </ul></p>
                <p><a href="#" class="btn btn-default" role="button" target="_blank">More Venue Info</a></p>
              
            </div>
          </div>
        </div>
      <% end %>

       
    </div>
</div>


<%= link_to 'New Venue', new_venue_path %>